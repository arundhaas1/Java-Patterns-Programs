package com.dhas;

import java.util.Arrays;
import java.util.Scanner;

public class Main {
    public static void main(String []args){
       int lines=6;

       for (int i=0;i<lines;i++){
           for (int j=0;j<=i;j++){
                   System.out.print(" "+(char)(65+i));
           }
           System.out.println();
       }
    }
}
